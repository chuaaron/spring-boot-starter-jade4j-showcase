mixin property(image, price, sqft, beds, baths)
  .col-xs-12.col-sm-12.col-md-6.col-lg-6
    .panel.panel-default
      .row.padall
        .col-xs-12.col-sm-12.col-md-3.col-lg-3
          span
          img(src=image)
        .col-xs-12.col-sm-12.col-md-9.col-lg-9
          .clearfix
            .pull-left
              span.fa.fa-dollar.icon #{price}
            .pull-right
              | | #{sqft} SqFt | #{beds} | #{baths}
          div
            h4
              span.fa.fa-map-marker.icon
              p= util.format(1.44)
              | 1021 N Garfield St
              | Build 2007. Close to Merto.
              | | #{util.format(3.0)}
              span.fa.fa-lock.icon.pull-right  Sold